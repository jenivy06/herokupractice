 <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<div class="row text-white bg-dark mb-4">
  <div class="col-md-4 col-12 card-header">
    <!--<img src="/public/images/burger.jpg" class="img-fluid" height="180px">-->
  </div>
  <div class="col-md-8 col-12 card-header pt-4">
    <h1 class="fas fa-utensils"> Eat-Da-Burgers!</h1>
    
  </div>
</div>
<div class="jumbtron">
  <div class="row mx-2">
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Ready-to-Eat Burgers</h2>
      <div class="card-body">
        <div class="card-text"> 
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Devoured Burgers</h2>
      <div class="card-body">
        <div class="card-text">        
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Place an Order</h2>
      <div class="card-body">
        <div class="card-text">
          <form class="create-form">
            <div class="form-group">
              <label for="bu">Burger Name:</label>
              <input type="text" id="bu" name="name">
            </div>
            <button type="submit" class="btn btn-outline-secondary rounded-0">Place Order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>